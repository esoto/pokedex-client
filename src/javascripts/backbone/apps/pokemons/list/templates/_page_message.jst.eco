<li class="chat-message page-message">
  <% sender_name = if @isOwner then "You" else @sender.name %>
  <div class="stamp">
    <%= "#{sender_name} at" if sender_name %>
    <%= moment(@created_at).format('h:mm a') %>
  </div>
  <p class="message">
    <i><%= @subtitle %></i>: <%= @content.body %>
  </p>
</li>
